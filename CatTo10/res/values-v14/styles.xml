<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:height">56dp</item>
    </style>

    <style name="AngerRatingBar" parent="@android:style/Widget.RatingBar">
    	<item name="android:progressDrawable">@drawable/anger_bar_full</item>
		<item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>

</resources>